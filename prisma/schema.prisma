datasource db {
  provider = "sqlite" // or "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Appointment {
  id          Int      @id @default(autoincrement())
  studentName String
  email       String
  date        DateTime
  time        String
  concern     String?
  status      String   @default("pending") // pending | accepted | rejected
  createdAt   DateTime @default(now())
}
